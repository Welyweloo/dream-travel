    rel="stylesheet">

<!-- Stylesheet BOOTSTRAP -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

<link rel="stylesheet" href="{{ asset('css/style-city-list.css') }}" crossorigin="" />

{% endblock %}

{% block container %}


{# {{ dump(app.request.headers.get('referer')) }} #}

<div class="city-list-result-show">

    <h1>Utilisateurs suivis</h1>

    {% for favorite in app.user.favoriteUser %}
    <div class="card city-list-card text-center" style="width: 18rem;">
        <img src="{{ asset('/images/avatars/' ~ favorite.avatar) }}" class="img-thumbnail" alt="Avatar de l'utilisateur {{favorite.name}}">
        <div class="card-body text-center">
            <h5 class="card-title">{{ favorite.name }}</h5>
            <a href="{{ path('user_show', {id: favorite.id}) }}">Voir profil</a>
        </div>
    </div>
        {% endfor %}
</div>

{% endblock %}


